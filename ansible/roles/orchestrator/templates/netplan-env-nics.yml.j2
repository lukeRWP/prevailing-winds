# Configures additional NICs for environment VLAN access
# Allows the orchestrator to reach all environment VMs directly
network:
  version: 2
  ethernets:
{% for nic in orchestrator_env_nics %}
    {{ nic.interface }}:
      addresses:
        - {{ nic.address }}
      routes:
        - to: {{ nic.subnet }}
          via: {{ nic.gateway }}
          metric: {{ nic.metric | default(200) }}
      mtu: 1500
{% endfor %}
