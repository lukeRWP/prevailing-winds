global:
  scrape_interval: 15s
  evaluation_interval: 15s
  scrape_timeout: 10s

rule_files:
  - /etc/prometheus/rules/*.yml

alerting:
  alertmanagers:
    - static_configs:
        - targets: []

scrape_configs:
  # Prometheus self-monitoring
  - job_name: prometheus
    static_configs:
      - targets: ["localhost:9090"]
        labels:
          environment: "{{ environment_name }}"

  # Node Exporter — system metrics from all VMs
  - job_name: node
    static_configs:
      - targets:
{% for target in monitoring_targets.node %}
          - "{{ target }}"
{% endfor %}
        labels:
          environment: "{{ environment_name }}"
    relabel_configs:
      - source_labels: [__address__]
        regex: "{{ app_name }}-([^-]+)-.*"
        target_label: role

  # App Server — application metrics
  - job_name: {{ app_name }}-server
    metrics_path: /metrics
    static_configs:
      - targets:
{% for target in monitoring_targets.app %}
          - "{{ target }}"
{% endfor %}
        labels:
          environment: "{{ environment_name }}"

  # MySQL Exporter (if deployed)
  - job_name: mysql
    static_configs:
      - targets:
          - "{{ app_name }}-db-{{ environment_name }}:9104"
        labels:
          environment: "{{ environment_name }}"
          role: database
