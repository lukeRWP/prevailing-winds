      hosts:
        pw-vault:
          ansible_host: 10.0.x.x
    pw_runner:
      hosts:
        pw-runner:
          ansible_host: 10.0.x.x
    pw_orchestrator:
      hosts:
        pw-orchestrator:
          ansible_host: 10.0.x.x
